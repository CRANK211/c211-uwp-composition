                                    Width="600"
                                    Height="900"
                                    Margin="12"
                                    VerticalAlignment="Top">
                <interactivity:Interaction.Behaviors>
                    <behaviors:SizeAndOffsetImplicitAnimationBehavior DurationMilliSeconds="300" />
                </interactivity:Interaction.Behaviors>
            </controls:VisualControl>

            <StackPanel x:Name="ImageDetails"
